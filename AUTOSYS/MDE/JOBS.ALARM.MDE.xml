   <scripts>
      <row>
         <process><![CDATA[!
:SEND_MSG "*", "*", "USER: &USER# ; APPLICATION: &MYAPPLICATION# ; Autosys JOB: &JOB_NAME# ; ALARM: &MESSAGE# "
:SET &TIME# = SYS_TIME_PHYSICAL("HH:MM:SS")
:SET &DATE# = SYS_DATE_PHYSICAL('DD.MM.YYYY')
!
!:IF &JOB_NAME# = "mdesrc2m_0020_srcd02bat"
!:  SET &RET#=SEND_MAIL("pilotage@laptop.com",,"AUTOSYS ALARM &JOB_NAME#",&MESSAGE#)
!:ENDIF
:set &FIC#=str_cat("/tmp/ALARM", &DATE#)
:set &FIC#=str_cat(&FIC#, ".txt")

! Formatage du chanp USER pour avoir le nom du manager AutoSys
:DEFINE &STRINGS#, string, 2
:FILL &STRINGS#[] = STR_SPLIT(&USER#,"\")
:SET &MANAGERAUTO#=&STRINGS#[1]
!
! Formatage du chanp APPLICATION pour avoir le nom de l'instance Autosys
:FILL &STRINGS#[] = STR_SPLIT(&APPLICATION#,",")
:SET &INSTANCEAUTO#=&STRINGS#[2]
!
! serveurs WCC selon le nom de l'instane Autosys
:SET &WCC#=GET_VAR(VARA.AUTOSYS.WCC,&INSTANCEAUTO#,1)
! suppression de Newline dans le message
message="$(echo "&MESSAGE#"|tr -d '\n')"
echo "&DATE# &TIME# &MANAGERAUTO# &INSTANCEAUTO# WCC:&WCC# $message" >> &FIC#

]]></process>
      </row>
