   <scripts>
      <row>
         <process><![CDATA[:SEND_MSG "*", "*", "Autosys JOB: &JOB_NAME# ; ALARM: &MESSAGE#"
:SET &TIME# = SYS_TIME_PHYSICAL("HH:MM:SS")
:SET &DATE# = SYS_DATE_PHYSICAL('DD.MM.YYYY')
!
:IF &JOB_NAME# = "rissrc2m_0020_srcd02bat"
:  SET &RET#=SEND_MAIL("pilotage@laptop.com",,"AUTOSYS ALARM &JOB_NAME#",&MESSAGE#)
:ENDIF
!
:SWITCH &$PLATFORM#
:  CASE "WINDOWS"
:    set &FIC#=str_cat("c:\TEMP\ALARM", &DATE#)
:    set &FIC#=str_cat(&FIC#, ".txt")
     echo "&TIME# &MESSAGE#" >> &FIC#
:  CASE "UNIX"
:    set &FIC#=str_cat("/tmp/ALARM", &DATE#)
:    set &FIC#=str_cat(&FIC#, ".txt")
     echo "&TIME# &MESSAGE#" >> &FIC#
:  OTHER
:ENDSWITCH]]></process>
      </row>
   </scripts>
